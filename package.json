{
  "name": "@typewriter/document",
  "version": "0.7.3",
  "description": "An immutable text document format using Delta format broken into lines for optimized rendering.",
  "keywords": [
    "typewriter",
    "rich text editor",
    "wysiwyg",
    "delta"
  ],
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "lint": "eslint 'src/**/*.ts'",
    "test": "TS_NODE_PROJECT=test/tsconfig.json mocha",
    "tdd": "TS_NODE_PROJECT=test/tsconfig.json mocha -w --reporter progress"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "type": "module",
  "directories": {
    "lib": "lib",
    "src": "src",
    "doc": "docs",
    "example": "examples",
    "test": "test"
  },
  "files": [
    "lib",
    "src"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-namespace": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/typewriter-editor/typewriter-document.git"
  },
  "dependencies": {
    "@typewriter/delta": "^1.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^4.0.2",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "typescript": "^4.6.4"
  }
}
